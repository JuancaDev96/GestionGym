<Modal @ref="imageModal" Title="Imagen" Size="ModalSize.Large" >
    <BodyTemplate>
        <div class="d-flex justify-content-center">
            @if (!string.IsNullOrWhiteSpace(ImageUrl))
            {
                <img src="@ImageUrl" class="img-fluid" alt="Image Preview" />
            }
            else
            {
                <p>No image to display.</p>
            }
        </div>
    </BodyTemplate>
</Modal>

@code {
    private Modal imageModal {get;set;} = default!;

    [Parameter]
    public string ImageUrl { get; set; } = default!;

   
    public async Task OpenModal(string imageUrl)
    {
        ImageUrl = imageUrl;
        await imageModal.ShowAsync();
    }
   
}
